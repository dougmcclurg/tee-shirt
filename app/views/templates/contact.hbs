<h2>Contact:</h2>
<form class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="emailinput">email</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-envelope"></i></span><input type="email" class="input-xlarge focused" id="emailinput" required/>
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="fnameinput">firstname</label>
            <div class="controls">
                <input type="text" class="input-xlarge focused" id="fnameinput" required/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="lnameinput">lastname</label>
            <div class="controls">
                <input type="text" class="input-xlarge focused" id="lnameinput" required/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="questioninput">question</label>
            <div class="controls">
                <textarea class="input-xlarge focused" id="questioninput"/>
            </div>
        </div>
        <div class="form-actions">
            <button type="button" class="btn-large btn-primary" id="send">
                <i class="icon-comment icon-white"></i> 
                Send
            </button>
        </div>
    </fieldset>
</form>